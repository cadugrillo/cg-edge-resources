{
  "version": "2",
  "templates": [
    {
      "type": 1,
      "title": "Datalake",
      "name": "Datalake",
      "hostname": "datalake",
      "description": "Local Datalake for Apps",
      "categories": ["cg-apps"],
      "platform": "linux",
      "logo": "https://raw.githubusercontent.com/cadugrillo/cg-edge-resources/main/cg-logo.png",
      "image": "eclipse-mosquitto",
      "restart_policy": "always",
      "network": "cg-edge",
      "ports": ["1883/tcp"],
      "volumes": [
        {
          "container": "/mosquitto/config",
	  "bind": "/home/edge/apps/datalake/config",
          "readonly": true
        },
        {
          "container": "/mosquitto/data",
	  "bind": "/home/edge/apps/datalake/data"
        },
        {
          "container": "/mosquitto/log",
	  "bind": "/home/edge/apps/datalake/log"
        }
      ]
    },
    {
      "type": 1,
      "title": "MQTT Cloud Connetor",
      "name": "MQTT-Cloud-Connetor",
      "hostname": "mqtt-cloud-connector",
      "description": "Connect any topic from Local DataLake to any Cloud Provider",
      "categories": ["cg-apps"],
      "platform": "linux",
      "logo": "https://raw.githubusercontent.com/cadugrillo/cg-edge-resources/main/cg-logo.png",
      "image": "cadugrillo/mqtt-cloud-connector:1.4",
      "restart_policy": "always",
      "network": "cg-edge",
      "volumes": [
        {
          "container": "/config",
	  "bind": "/home/edge/apps/mqtt-cloud-connector/config"
        },
        {
          "container": "/certs",
	  "bind": "/home/edge/apps/mqtt-cloud-connector/certs"
        }
      ]
    },
    {
      "type": 1,
      "title": "Node Creator",
      "name": "Node-Creator",
      "hostname": "node-creator",
      "description": "Create data flows using nodes",
      "categories": ["cg-apps"],
      "platform": "linux",
      "logo": "https://raw.githubusercontent.com/cadugrillo/cg-edge-resources/main/cg-logo.png",
      "image": "nodered/node-red",
      "restart_policy": "always",
      "network": "cg-edge",
      "ports": ["1880:1880/tcp"],
      "volumes": [
        {
          "container": "/data"
        }
      ]
    },
    {
      "type": 1,
      "title": "OPC-UA MQTT Connetor",
      "name": "OPC-UA-MQTT-Connetor",
      "hostname": "opcua-mqtt-connector",
      "description": "Connect any OPC-UA Server to Local DataLake",
      "categories": ["cg-apps"],
      "platform": "linux",
      "logo": "https://raw.githubusercontent.com/cadugrillo/cg-edge-resources/main/cg-logo.png",
      "image": "cadugrillo/opcua-mqtt-connector:1.3",
      "restart_policy": "always",
      "network": "cg-edge",
      "volumes": [
        {
          "container": "/config",
	  "bind": "/home/edge/apps/opcua-mqtt-connector/config"
        }
      ]
    }	  
  ]
}
