{
  "version": "2",
  "templates": [
    {
      "type": 1,
      "title": "Datalake",
      "name": "Datalake",
      "hostname": "datalake",
      "description": "Local Datalake for Apps based on Eclipse Mosquitto message broker. It implements the MQTT protocol versions 5.0, 3.1.1 and 3.1.",
      "info_url": "https://mosquitto.org/",    
      "categories": ["cg-apps"],
      "platform": "linux",
      "logo": "https://raw.githubusercontent.com/cadugrillo/cg-edge-resources/main/cg-logo-small.png",
      "image": "eclipse-mosquitto",
      "restart_policy": "always",
      "network": "cg-edge",
      "env": [],
      "ports": ["1883/tcp"],
      "volumes": ["/home/edge/apps/datalake/config:/mosquitto/config",
		  "/home/edge/apps/datalake/data:/mosquitto/data",
		  "/home/edge/apps/datalake/log:/mosquitto/log"]
    },
    {
      "type": 1,
      "title": "MQTT Cloud Connector",
      "name": "MQTT-Cloud-Connector",
      "hostname": "mqtt-cloud-connector",
      "description": "Connect any topic from Local DataLake to any Cloud Provider",
      "info_url": "",
      "categories": ["cg-apps"],
      "platform": "linux",
      "logo": "https://raw.githubusercontent.com/cadugrillo/cg-edge-resources/main/cg-logo-small.png",
      "image": "cadugrillo/mqtt-cloud-connector:1.6",
      "restart_policy": "always",
      "network": "cg-edge",
      "env": [],	    
      "volumes": ["/home/edge/apps/mqtt-cloud-connector/config:/config",
		  "/home/edge/apps/mqtt-cloud-connector/certs:/certs"]
    },
    {
      "type": 1,
      "title": "Node Creator",
      "name": "Node-Creator",
      "hostname": "node-creator",
      "description": "Create data flows using nodes based on Node-RED. Low-code programming for event-driven applications.",
      "info_url": "https://nodered.org/",
      "categories": ["cg-apps"],
      "platform": "linux",
      "logo": "https://raw.githubusercontent.com/cadugrillo/cg-edge-resources/main/cg-logo-small.png",
      "image": "nodered/node-red",
      "restart_policy": "always",
      "network": "cg-edge",
      "env": [],
      "ports": ["1880:1880/tcp"],
      "volumes": ["nodered-data:/data"]
    },
    {
      "type": 1,
      "title": "OPCUA MQTT Connector",
      "name": "OPCUA-MQTT-Connector",
      "hostname": "opcua-mqtt-connector",
      "description": "Connect any OPC-UA Server to Local DataLake",
      "info_url": "",
      "categories": ["cg-apps"],
      "platform": "linux",
      "logo": "https://raw.githubusercontent.com/cadugrillo/cg-edge-resources/main/cg-logo-small.png",
      "image": "cadugrillo/opcua-mqtt-connector:1.5",
      "restart_policy": "always",
      "network": "cg-edge",
      "env": [],	    
      "volumes": ["/home/edge/apps/opcua-mqtt-connector/config:/config"]
    },
    {
      "type": 1,
      "title": "Grafana",
      "name": "Grafana",
      "hostname": "grafana",
      "description": "Query, visualize, alert on, and understand your data no matter where itâ€™s stored.",
      "info_url": "https://grafana.com/docs/grafana/latest/introduction/",
      "categories": ["cg-apps"],
      "platform": "linux",
      "logo": "https://raw.githubusercontent.com/cadugrillo/cg-edge-resources/main/grafana-logo.png",
      "image": "grafana/grafana",
      "restart_policy": "always",
      "network": "cg-edge",
      "env": [],
      "ports": ["3000:3000/tcp"],
      "volumes": ["grafana-data:/var/lib/grafana"]
    },
    {
      "type": 1,
      "title": "InfluxDB",
      "name": "InfluxDB",
      "hostname": "influxdb",
      "description": "InfluxDB is an open source time series database for recording metrics, events, and analytics.",
      "info_url": "https://docs.influxdata.com/influxdb/v2.3/",
      "categories": ["cg-apps"],
      "platform": "linux",
      "logo": "https://raw.githubusercontent.com/cadugrillo/cg-edge-resources/main/influxdb-logo.png",
      "image": "influxdb:2.3",
      "restart_policy": "always",
      "network": "cg-edge",
      "env": ["DOCKER_INFLUXDB_INIT_MODE=setup",
	      "DOCKER_INFLUXDB_INIT_USERNAME=cguser",
	      "DOCKER_INFLUXDB_INIT_PASSWORD=cguser01",
	      "DOCKER_INFLUXDB_INIT_ORG=cg-edge",
	      "DOCKER_INFLUXDB_INIT_BUCKET=cg-bucket1"],
      "ports": ["8086:8086/tcp"],
      "volumes": ["influxdb-data:/var/lib/influxdb2"]
    }  
  ]
}
